<div class="tutorial-container">
  <div class="topic-items">
    {{#each item in topicItems }}
      {{#link-to 'topic-item' item class="topic-item"}}
        {{image-list item}}
      {{/link-to}}
    {{/each}}
  </div>
  <div class="stage">
    <div class="how-it-works">
      {{ partial topicItem.instructionPartial }}
    </div>
    <div class="code">
      {{#if topicItem.labUrl}}
        {{#ic-modal-trigger controls="try-it" class="try-it-button"}}
          Try it out
        {{/ic-modal-trigger}}

        {{#ic-modal id="try-it"}}
          {{#ic-modal-title}}
            <span class="try-it-title">
              <span class="tag">&lt;</span><span class="name">codr</span><span class="text">lab</span><span class="tag">&gt;</span>
            </span>
          {{/ic-modal-title}}
          {{view 'lab-frame'}}
          <!-- <iframe class="try-it-frame" {{ bind-attr src=topicItem.labUrl }}/> -->
        {{/ic-modal}}
      {{/if}}

      {{ partial topicItem.examplePartial }}
    </div>
  </div>
</div>
